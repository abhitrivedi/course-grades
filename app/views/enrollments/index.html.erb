<p id="notice"><%= notice %></p>

<h1>Enrollments</h1>

<% if current_user.teacher? %>
  <h3>You are an Admin on this system.</h3>
<% end %>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enrollments.each do |enrollment| %>
      <tr>
        <td><%= enrollment.user_name %></td>
        <td><%= enrollment.course_name %></td>
        <td><%= link_to 'Show', enrollment %></td>

        <% if current_user.teacher? %>
          <td><%= link_to 'Un-enroll', enrollment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Enrollment', new_enrollment_path %> |
<%= link_to 'Users', users_path %> |
<%= link_to 'Courses', courses_path %> |
<%= link_to 'Home', '/sessions/welcome' %>
