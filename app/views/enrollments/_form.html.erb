<%= form_with(model: enrollment, local: true) do |form| %>
  <% if enrollment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(enrollment.errors.count, "error") %> prohibited this enrollment from being saved:</h2>

      <ul>
      <% enrollment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">

    <%= form.label :user_id %>
    <%= form.select :user_id, options_for_select(User.all.collect { | user | [user.name, user.id] }, current_user.id), {}, {} %>

  </div>

  <div class="field">
    <%= form.label :course_id %>
    <%= form.select :course_id, options_for_select(Course.all.collect { | course | [course.name, course.id] }, nil), {}, {} %>
  </div>

  <div class="field">
    <%= form.label :score %>
    <%= form.text_field :score %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
